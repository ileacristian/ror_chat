<div class="row">
  <div class="span6 offset3 my-well">
    <h3 class="center">Login for socially awkward people</h3>
    <%= form_tag no_social_login_path, :class => "form-horizontal" do%>
      <fieldset>
        <div class="control-group">
          <%= label_tag "username", "Username", :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag "username", nil, :placeholder => "username" %>
          </div>
        </div>
        <div class="control-group">
          <%= label_tag "password", "Password", :class => "control-label" %>
          <div class="controls">
            <%= password_field_tag "password", nil,  :placeholder => "password" %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <%= submit_tag "Login", :class =>"btn btn-large btn-primary"%>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
